<header class="header">
  <h1 id="home">Portfolio</h1>
  <nav class="nav">
    <ul class="ul-nav">
      <a href="#home">
        <li class="li-nav">Home</li>
      </a>

      <a href="#projects">
        <li class="li-nav">Projects</li>
      </a>

      <a href="#skills">
        <li class="li-nav">Skills</li>
      </a>
      <a href="#studies">
        <li class="li-nav">Studies</li>
      </a>
      <a href="#aboutme">
        <li class="li-nav">About Me</li>
      </a>

      <a href="#contact">
        <li class="li-nav">Contact</li>
      </a>
    </ul>
  </nav>
  <div class="container-bnt-menu">
    <div class="btn-menu">
      <span class="linea-menu" id="linea1"></span>
      <span class="linea-menu" id="linea2"></span>
      <span class="linea-menu" id="linea3"></span>
    </div>
  </div>

  <div class="menu-drop"></div>

  <script>
    const $menu = document.querySelector(".nav");
    const $menuDrop = document.querySelector(".menu-drop");
    const $btnmenu = document.querySelector(".btn-menu");
    const $linea1 = document.querySelector("#linea1");
    const $linea2 = document.querySelector("#linea2");
    const $linea3 = document.querySelector("#linea3");
    $btnmenu.addEventListener("click", () => {
      $linea1.classList.toggle("activelinea1__bars-menu");
      $linea2.classList.toggle("activelinea2__bars-menu");
      $linea3.classList.toggle("activelinea3__bars-menu");
      $menu.classList.toggle("menu-activated");
      $menuDrop.classList.toggle("active-menu-drop");
    });

    $menuDrop.addEventListener("click", () => {
      $linea1.classList.toggle("activelinea1__bars-menu");
      $linea2.classList.toggle("activelinea2__bars-menu");
      $linea3.classList.toggle("activelinea3__bars-menu");
      $menu.classList.toggle("menu-activated");
      $menuDrop.classList.toggle("active-menu-drop");
    });
  </script>
</header>

<style is:global>
  .header {
    position: relative;
    height: 80px;
    width: 100%;
    padding: 20px 20px;
    color: #f6f6f9;
    display: flex;
    justify-content: space-between;
    overflow: hidden;
    max-width: 1355px;
    margin: 0 auto;
  }
  .header h1 {
    display: inline-block;
    position: relative;
    z-index: 20;
  }
  .nav {
    position: relative;
    display: flex;
    justify-content: space-between;
    align-items: center;
    color: #f6f6f9;
  }
  .ul-nav {
    position: relative;
    display: flex;
  }

  .ul-nav a {
    text-decoration: none;
    color: #f6f6f9;
  }
  .li-nav {
    position: relative;
    list-style: none;
    color: #f6f6f9;
    transition: 0.3s;
    margin: 0 10px;
    padding: 4px 2px;
    text-align: center;
  }
  .li-nav::before {
    content: "";
    position: absolute;
    height: 2px;
    width: 0%;
    background-color: #01be96;
    bottom: -3px;
  }
  .li-nav:hover::before {
    width: 100%;
    transition: 0.4s;
  }
  .li-nav:hover {
    color: #01be96;
  }

  .container-bnt-menu {
    display: none;
  }

  .menu-drop {
    display: none;
  }

  /* responsive */
  @media (max-width: 720px) {
    .menu-drop {
      display: block;
    }
    .container-bnt-menu {
      display: block;
    }
    .header {
      position: fixed;
      display: flex;
      justify-content: space-between;
      top: 0;
      left: 0;
      z-index: 100;
    }
    h1 {
      display: inline-block;
    }
    .container-bnt-menu {
      position: relative;
      padding: 0px 20px;
      z-index: 9999;
    }
    .linea-menu {
      display: block;
      height: 2px;
      width: 40px;
      background-color: #f6f6f9;
      top: -5px;
      margin-top: 10px;
      cursor: pointer;
      transition: all 0.4s;
    }
    .activelinea1__bars-menu {
      transform: rotate(40deg) translate(-2px, 1px);
    }
    .activelinea2__bars-menu {
      opacity: 0;
      margin-left: -30px;
    }
    .activelinea3__bars-menu {
      transform: rotate(-40deg) translate(-2px, 1px);
    }
    .nav {
      position: fixed;
      flex-direction: column;
      background: #111111;
      width: auto;
      height: 100vh;
      right: -300px;
      top: 80px;
      transition: right 0.4s ease-in-out;
      z-index: 100;
    }

    .li-nav {
      padding: 30px 80px;
      text-align: center;
      width: 100%;
      margin: 0;
    }
    .li-nav:hover {
      background-color: #01be96;
      color : #000;
    }
    .li-nav:hover::before {
      width: 0;
      height: 0;
    }

    .menu-activated {
      right: 0px;
      transition: right 0.4s ease-in-out;
    }
    .menu-drop {
      top: 0;
      left: 0;
      position: fixed;
      height: 100vh;
      width: 100%;
      background-color: rgba(0, 0, 0, 0.5);
      z-index: 20;
      display: none;
    }
    .active-menu-drop {
      display: block;
      transition: 0.5s display;
    }
    .ul-nav {
      flex-direction: column;
      width: 100%;
    }
  }
</style>
