---
import { skills } from "../../../const/const";
import { getIconComponent } from "../../../icons/IconAll.astro";
// Filter for software skills
const filteredSkills = skills.filter(({ title }) => 
  title === 'MongoDB' || 
  title === 'React.js' ||
  title === 'GitHub' || 
  title === 'Git'
);

// Hardware, platforms, techniques, and fabrication skills
const hardwareSkills = [
  { title: 'LabVIEW' },
  { title: 'Verilog' },
  { title: 'MATLAB' },
  { title: 'Python' },
  { title: 'C/C++' },
  { title: 'ESP32 Thing Plus' },
  { title: 'Adafruit Feather' },
  { title: 'ARM Cortex M4F' },
  { title: 'PIC32' },
  { title: 'Biomedical Signal Processing' },
  { title: 'Embedded Firmware Design' },
  { title: 'MPLAB X' },
  { title: 'Visual Studio Code' },
  { title: 'Altium Designer' },
  { title: 'Pspice' },
  { title: 'LTspice' },
  { title: '3D Printing' },
  { title: 'Laser Cutting' },
  { title: 'PCB Milling (Bantam)' },
  { title: 'PCB Printing (Voltera)' },
  { title: 'Polymer Fabrication (Silicone & Hydrogel)' }
];
---

<section class="section-skill">
  <div class="linear-gradient-1"></div>
  <div class="container-skill">
    <h2 class="title-skills" id="skills">Software Skills</h2>
    <ul class="ul-skill">
      {
        filteredSkills.map(({ icon, title }) => {
          const IconComponent = getIconComponent(icon);
          return (
            <li class="li-skills">
              {IconComponent && <IconComponent />}
              <p class="p-skill">{title}</p>
            </li>
          );
        })
      }
    </ul>
  </div>
   <div class="container-skill">
    <h2 class="title-skills" id="hardware-skills">Hardware & Others Skills</h2>
    <p class="p-skill">
      <strong>Programming Languages:</strong> LabVIEW, Verilog, MATLAB, C/C++.
    </p>
    <p class="p-skill">
      <strong>Development Platform:</strong> ESP32 ThingPlus, Adafruit Feather, ARM Cortex M4F, PIC32.
    </p>
    <p class="p-skill">
      <strong>Techniques:</strong> Biomedical Signal and Image Processing, Embedded Firmware, and Hardware Design.
    </p>
    <p class="p-skill">
      <strong>Software:</strong> MPLAB X, Visual Studio Code, Altium Designer, Pspice, LTspice.
    </p>
    <p class="p-skill">
      <strong>Digital Fabrication:</strong> 3D Printing, Laser Cutting, PCB milling (Bantam), PCB printing (Voltera), 
      Polymer fabrication (silicone/hydrogel).
    </p>
  </div>
  
</section>

<style>
  .section-skill {
    position: relative;
    overflow: hidden;
    /* background-color: #111111; */
  }

  .container-skill {
    position: relative;
    width: 90%;
    color: #f6f6f9;
    padding: 10px 0;
    margin: 0 auto;
    padding: 10px 0;
    height: 100%;
    max-width: 1355px;
  }

  .title-skills {
    position: relative;
    display: block;
    font-size: 27px;
    padding: 10px 0;
    color: #f6f6f9;
    width: 100%;
    font-weight: 800;
    scroll-margin-top: 80px;
  }

  .li-skills {
    display: flex;
    list-style: none;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    padding: 10px;
    text-align: center;
  }

  .p-skill {
    padding: 5px 0;
    color: #f6f6f9;
    font-size: 18px;
  }

  .linear-gradient-1 {
    position: absolute;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    /* background: linear-gradient(to top, #000, rgba(1, 190, 150, 0.5)); */
    z-index: 0;
  }

  .ul-skill {
    position: relative;
    display: grid;
    width: 100%;
    align-items: center;
    gap: 15px;
    padding: 40px 0;
    grid-template-columns: repeat(8, 1fr);
  }

  @media (min-width: 300px) {
    .ul-skill {
      grid-template-columns: repeat(3, 1fr);
      padding: 20px 0;
    }
  }

  @media (min-width: 550px) {
    .ul-skill {
      grid-template-columns: repeat(4, 1fr);
      padding: 20px 0;
    }
  }

  @media (min-width: 800px) {
    .ul-skill {
      grid-template-columns: repeat(5, 1fr);
    }
  }

  @media (min-width: 1000px) {
    .ul-skill {
      grid-template-columns: repeat(6, 1fr);
    }
  }

  @media (min-width: 1200px) {
    .ul-skill {
      grid-template-columns: repeat(7, 1fr);
    }
  }

  @media (min-width: 1350px) {
    .ul-skill {
      grid-template-columns: repeat(8, 1fr);
    }
  }
</style>
